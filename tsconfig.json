  
{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      // "lib": ["es2017"],
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "outDir": "lib",
      "baseUrl": ".",
      "watch":true ,
      "paths": {
          "*": [
              "node_modules/*",
          ]
      }
  },
  "include": [
      "src/*",
      "src/utils"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ],
}