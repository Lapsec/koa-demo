  
{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      // "lib": ["es2017"],
      "moduleResolution": "node",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "lib",
      "baseUrl": ".",
      "noImplicitAny": false,
      "watch": true ,
      "paths": {
          "*": [
              "node_modules/*",
          ]
      }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}