  
{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      // "lib": ["es2017"],
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "outDir": "lib",
      "baseUrl": ".",
      "watch":true ,
      "paths": {
          "*": [
              "node_modules/*",
              "src/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}